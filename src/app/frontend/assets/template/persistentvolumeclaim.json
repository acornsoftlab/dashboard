{
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
        "name": "block-pvc",
        "namespace": "default"
    },
    "spec": {
        "accessModes": [
            "ReadWriteOnce"
        ],
        "volumeMode": "Block",
        "resources": {
            "requests": {
                "storage": "10Gi"
            }
        }
    }
}